<h1> Dr. <%=@doctor.name %></h1>

<h2> Department: <%@doctor.department%></h2>

<h2> Apppointments: </h2>
  <ul>
    <% @doctor.appointments.each do |app|%>
    <li>Time: <%= app.appointment_datetime.strftime("%B %d, %Y at %H:%M") %> |
      Patient: <%=link_to app.patient.name, patient_path(app.patient)%></li>
    <%end%>
  </ul>
